<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Roadwise.AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="car.png"
                   SemanticProperties.Description="car"
                   HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="Roadwise" VerticalOptions="End" />
            <Label FontSize="22" Text="v0.01" VerticalOptions="End" />
        </HorizontalStackLayout>

        <Label Text="This app is written in XAML and C# with .NET MAUI." />
        <Label Text="It is focused on road vehicle and pedestrian safety" />
        <Label Text="This demo will become more elaborate and incorporate data analysis of real-time traffic and sensor data" />
        <Button Text="Learn more..." Clicked="LearnMore_Clicked" />
    </VerticalStackLayout>
</ContentPage>
