<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Roadwise.GraphThingPage"
             xmlns:drawable="clr-namespace:Roadwise"
             Title="GraphThingPage">
    <ContentPage.Resources>
        <drawable:NewDrawable x:Key="NewDrawable"/>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <Label 
            Text="Here are the statistics"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image Source="chart.png"
             SemanticProperties.Description="stats"
            HeightRequest="200" />

        <Label 
            Text="Based on the historic data provided- it is probably safe to travel this route"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>